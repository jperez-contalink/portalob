<style>
      .hover_clean:hover {
        background-color: #2980b9;
        color: white;
      }
</style>
<br><br><br><br><br>
<div width="60%" style="border:0px solid orange;padding:0% 15% 0% 15%;">
  <div align="center"><h2>Mi cuenta</h2></div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>


    <div class="form-group">
      <%= f.label :Nombre %><br />
      <%= f.text_field :nombre, class: "form-control"  %>
    </div>  
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control"  %>
    </div>   
    <div class="form-group">
      <strong>RFC</strong><br />
      <%= f.text_field :rfc,:readonly => true, autofocus: true, class: "form-control"  %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="fform-groupield">
      <strong>Contrase침a</strong> <i>(Deja esto en blanco si no quieres cambiarlo)</i><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
    </div>
    <br>
    <div class="form-group">
      <strong>Confirmar Contrase침a</strong><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
    </div>

    <div class="form-group">
      <strong>Contrase침a Actual </strong><i>(Necesitamos tu password actual para poder guardar los cambios)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control"  %>
    </div>

    <div class="actions">
      <%= f.submit "Actualizar", class: "btn btn-default hover_clean" %>
    </div>
  <% end %>

  <h3>Cancelar mi cuenta</h3>

  <p>No te gusta? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro?" }, class: "btn btn-default hover_clean", method: :delete %></p>
  <br>


  <%= link_to "Atr치s", :back %>
</div>