<br><br><br><br>
<h2>Registrate</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :Nombre %><br />
      <%= f.text_field :nombre, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <strong>RFC</strong><br />
      <%= f.text_field :rfc, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <strong>RFC del proveedor</strong><br />
      <%= f.text_field :rfcempresa, class: "form-control" %>
    </div>

    <%= f.hidden_field :empresa_id, class: "form-control" %>
      <div class="form-group">
        <!--<%= f.label :password %>-->
        <strong>Contraseña </strong><br />
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> caracteres minimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
      </div>

      <div class="form-group">
        <!--<%= f.label :password_confirmation %><br />-->
        <strong>Confirma Contraseña </strong><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
      </div>

    <div class="actions">
      <%= f.submit "Registrate" %>
    </div>
  <% end %>

<%= render "devise/shared/links" %>
